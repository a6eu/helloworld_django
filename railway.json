{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "watchPatterns": [
            "/app/*.py",
            "/app/**/*.py",
            "/site_market/*.py",
            "/basket/*.py",
            "/brand/*.py",
            "/category/*.py",
            "/comment/*.py",
            "/custom_auth/*.py",
            "/favorites/*.py",
            "/order/*.py",
            "/products/*.py",
            "/Dockerfile",
            "/pyproject.toml"
        ]
    },
    "deploy": {
        "restartPolicyType": "ON_FAILURE"
    }
}